<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chang_pass_layout"
    android:padding="15dp"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mail_address_text_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forget_text_custom_bg"
        android:hint="@string/new_password_text"
        android:paddingLeft="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail_address_text_forget"
        android:layout_alignStart="@+id/mail_address_text_forget"
        android:layout_alignEnd="@+id/mail_address_text_forget"
        android:layout_marginTop="35dp"
        android:textSize="@dimen/medium_text_size"
        android:background="@drawable/button_radius"
        android:text="@string/forget_password_button_text"
        android:textColor="@color/white" />

</RelativeLayout>