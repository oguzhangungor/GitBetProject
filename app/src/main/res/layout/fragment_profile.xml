<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.profile.ProfileFragment"
    android:orientation="vertical"
    android:id="@+id/profile_layout"


    android:layout_alignParentTop="true">
    <RelativeLayout
        android:id="@+id/feed_relative"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/checkbox"
        android:gravity="center_vertical">


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_mail_adress_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/emailtextbackground"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:hint="@string/email_address"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_change_password_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/medium_size"
        android:background="@drawable/changepass"
        android:clickable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_logut_button"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/medium_size"
        android:background="@drawable/logout"
        android:clickable="true"/>

</LinearLayout>