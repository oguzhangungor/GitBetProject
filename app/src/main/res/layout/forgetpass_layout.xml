<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chang_pass_layout"
    android:gravity="center"
    android:padding="16dp"
    >
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mail_address_text_forget"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/small_size"
        android:background="@drawable/passwordtextbackground"
        android:gravity="center_vertical"
        android:hint="@string/new_password_text"
        android:paddingLeft="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button_forget"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/mail_address_text_forget"
        android:layout_alignStart="@+id/mail_address_text_forget"
        android:layout_alignEnd="@+id/mail_address_text_forget"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:text="Sıfırlama Maili Gönder" />

</RelativeLayout>