<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/login_button"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/loginbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/login_password_editText"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/password"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/password_repeat_editText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/login_user_name_editText"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/username"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/mail_address_editText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mail_address_editText"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/username"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/login_password_editText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_repeat_editText"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/password"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox1"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:buttonTint="@color/checkbox"
        android:text="@string/sozlesme_okudum"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/login_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>