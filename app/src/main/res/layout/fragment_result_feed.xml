<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/feed_relative"
        android:layout_width="match_parent"
        android:weightSum="7"
        android:layout_height="wrap_content"
        android:background="@color/checkbox"
        android:gravity="center_vertical"
        android:padding="2dp"
        >


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_team"
            android:id="@+id/karsilasma_text"
            android:theme="@style/textTheme"
            />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tahmin_textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/karsilasma_text"
            android:gravity="center"
            android:text="@string/title_bet"
            android:theme="@style/textTheme"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oran_textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tahmin_textView"
            android:gravity="center"
            android:text="@string/result"
            android:theme="@style/textTheme"
            />



    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>