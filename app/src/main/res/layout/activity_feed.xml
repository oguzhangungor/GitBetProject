<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tabBg"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/feedbg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="194dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="129dp"
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/mainlogo" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/checkbox"
                android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Saat"
                        android:id="@+id/saat_textView"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />



                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:layout_toEndOf="@id/saat_textView"
                    android:gravity="center"
                    android:text="Karşılaşma"
                    android:id="@+id/karsilasma_text"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/oran_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tahmin_textView"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="Oran"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tahmin_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_toEndOf="@id/karsilasma_text"
                    android:gravity="center"
                    android:text="Tahmin"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/checkbox"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/feed_menu" />
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/checkbox"
        />
</RelativeLayout>