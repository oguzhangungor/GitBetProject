<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.daily.DailyFeedFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/feed_relative"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/checkbox"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Saat"
            android:id="@+id/saat_textView"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textStyle="bold" />



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_toEndOf="@id/saat_textView"
            android:gravity="center"
            android:text="Karşılaşma"
            android:id="@+id/karsilasma_text"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oran_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tahmin_textView"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="Oran"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tahmin_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dp"
            android:layout_toEndOf="@id/karsilasma_text"
            android:gravity="center"
            android:text="Tahmin"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daily_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>